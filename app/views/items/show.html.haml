= render 'header'
.item_detail_wrapper
  .item_detail_name #{@item.name}
  .item_detail_content
    .item_image
      .item_image__box
        =image_tag @item.images[0].image.url, class: 'item_image__box__main' if @item.images[0].present?
        .item_image__box__sub
          =image_tag @item.images[1].image.url,  class: 'img_child' if @item.images[1].present?
          =image_tag @item.images[2].image.url,  class: 'img_child' if @item.images[2].present?
          =image_tag @item.images[3].image.url,  class: 'img_child' if @item.images[3].present?
          =image_tag @item.images[4].image.url,  class: 'img_child' if @item.images[4].present?
          =image_tag @item.images[5].image.url,  class: 'img_child' if @item.images[5].present?
          =image_tag @item.images[6].image.url,  class: 'img_child' if @item.images[6].present?
          =image_tag @item.images[7].image.url,  class: 'img_child' if @item.images[7].present?
          =image_tag @item.images[8].image.url,  class: 'img_child' if @item.images[8].present?
          =image_tag @item.images[9].image.url,  class: 'img_child' if @item.images[9].present?
          =image_tag @item.images[10].image.url, class: 'img_child' if @item.images[10].present?
    .item_detail_content__information 
      %table{border: "1"}
        %tr
          %th 出品者
          %td #{@item.user.nickname}
        - if @item.category.present?
          %tr
            %th カテゴリー
            %td #{@item.category.name}
        - if @item.brand.present?
          %tr 
            %th ブランド
            %td #{@item.brand.name}
        %tr
          %th 商品のサイズ
          %td M
        %tr
          %th 商品の状態
          %td #{@item.conditon}
        %tr
          %th 配送料の負担
          %td #{@item.shipping_charge_fee}
        %tr
          %th 配送の方法
          %td #{@item.shipping_method}
        %tr
          %th 発送元地域
          %td #{@item.shipping_origin}
        %tr
          %th 発送の目安
          %td #{@item.days_to_shipping}
  .item_detail_price_wrapper
    .item_detail_price ¥#{@item.price.to_s(:delimited)}
    .item_detail_tax （税込）
    .item_detail_postage 送料込み
  .item_buy_wrapper
    .item_buy  
      - if user_signed_in? && current_user.id == @item.user_id
        = link_to '編集', edit_item_path, method: :get
        = link_to '削除', item_path, method: :delete
      - else
        = link_to '購入画面に進む', buy_transaction_index_path(@item)
  .itme_explanation_wrapper
    .item_explanation #{@item.detail}
  .item_butan_wrapper
    .item_butan
      .item_iine_wrapper
        .item_iine_icon
        .item_iine いいね！
        .item_iine_quantity 12
      .item_inappropriate_wrapper
        %i.far.fa-flag
        .item_inappropriate 不適切な商品の報告
    .safe_wrapper
      %i.fa.fa-lock
      .safe あんしん・あんぜんへの取り組み
= render 'footer'
