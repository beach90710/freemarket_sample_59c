.item_detail_all
  .item_detail_name #{@item.name}
  .item_detail_wrapper
    .item_detail_img_wrapper
      .item_detail_img
        =image_tag @item.images[0].image.url, class: 'item_detail_img_big' 
        .item_detail_img_small_all
          .item_detail_img_small
          .item_detail_img_small
          .item_detail_img_small
          .item_detail_img_small
