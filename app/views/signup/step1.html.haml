%h2 会員情報入力
= form_for @user, url: step2_signup_index_path do |f|
  .field
    = f.label "ニックネーム"
    %br/
    = f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder: "例）メルカリ太郎"
  .field
    = f.label "メールアドレス"
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらも可"
  .field
    = f.label "パスワード"
    %br/
    = f.password_field :password, autocomplete: "new-password", placeholder: "７文字以上の半角英数字"
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"
  .field
    = f.label "お名前（全角）"
    %br/
    = f.text_field :last_name, autocomplete: "last_name", placeholder: "例）山田"
    = f.text_field :first_name, autocomplete: "first_name", placeholder: "例）彩"
  .field
    = f.label "お名前カナ（全角）"
    %br/
    = f.text_field :last_name_kana, autocomplete: "last_name_kana", placeholder: "例）ヤマダ"
    = f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder: "例）アヤ"
  .field
    = f.label "年"
    %br/
    = f.select :birth_year, [["--", ]]
    = f.select :birth_month, [["--", ]]
    = f.select :birth_day, [["--", ]]
  .actions
    = f.submit "次へ進む"
