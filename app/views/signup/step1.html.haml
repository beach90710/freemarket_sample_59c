.signup-wrapper
  = render "signup/header-step1"
  .form-body
    %h2.form-header 会員情報入力
    = form_for  @user, url: step2_signup_index_path, html:{class: 'register-form'} do |f|
      .form-content
        .form-content__box
          = f.label "ニックネーム"
          %span.form-content__box__require 必須
          = f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder: "例）メルカリ太郎"
        .form-content__box
          = f.label "メールアドレス"
          %span.form-content__box__require 必須
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらも可"
        .form-content__box
          = f.label "パスワード"
          %span.form-content__box__require 必須
          = f.password_field :password, autocomplete: "new-password", placeholder: "７文字以上の半角英数字"
        .form-content__box
          = f.label "パスワード再入力"
          %span.form-content__box__require 必須
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "上記で入力したパスワードを再入力"
        .form-content__box
          = f.label "お名前（全角）"
          %span.form-content__box__require 必須
          = f.text_field :last_name, autocomplete: "last_name", placeholder: "例）山田"
          = f.text_field :first_name, autocomplete: "first_name", placeholder: "例）彩"
        .form-content__box
          = f.label "お名前カナ（全角）"
          %span.form-content__box__require 必須
          = f.text_field :last_name_kana, autocomplete: "last_name_kana", placeholder: "例）ヤマダ"
          = f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder: "例）アヤ"
        .form-content__box
          = f.label "年"
          %span.form-content__box__require 必須
          %br/
          = f.select :birth_year, [["--", ]]
          %span 年
          = f.select :birth_month, [["--", ]]
          %span 月
          = f.select :birth_day, [["--", ]]
          %span 日
        .form-content__submit
          = f.submit class:"form-btn", value:"次へ進む"
  = render "signup/footer"
            