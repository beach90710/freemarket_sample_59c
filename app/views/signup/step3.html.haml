.signup-wrapper
  = render "signup/header-step3"
  .form-body
    %h2.form-header 住所入力
    = form_for @address, url: step4_signup_index_path, html:{class: 'register-form'} do |f|
      .form-content
        .form-content__box
          = f.label "お名前（全角）"
          %span.form-content__box__require 必須
          = f.text_field :post_last_name, autocomplete: "last_name", placeholder: "例）山田"
          = f.text_field :post_first_name, autocomplete: "first_name", placeholder: "例）彩"
        .form-content__box
          = f.label "お名前カナ（全角）"
          %span.form-content__box__require 必須
          = f.text_field :post_last_name_kana, autocomplete: "last_name_kana", placeholder: "例）ヤマダ"
          = f.text_field :post_first_name_kana, autocomplete: "first_name_kana", placeholder: "例）アヤ"
        .form-content__box
          = f.label "郵便番号"
          %span.form-content__box__require 必須
          = f.number_field :post_number, autocomplete: "new-password", placeholder: "例）1234567"
        .form-content__box
          = f.label "都道府県"
          %span.form-content__box__require 必須
          = f.text_field :prefecture, autocomplete: "new-password", placeholder: "北海道"
        .form-content__box
          = f.label "市区町村"
          %span.form-content__box__require 必須
          = f.text_field :city, autocomplete: "new-password", placeholder: "例）横浜市緑区"
        .form-content__box
          = f.label "番地"
          %span.form-content__box__require 必須
          = f.text_field :address_line, autocomplete: "new-password", placeholder: "例）青山1-1-1"
        .form-content__box
          = f.label "建物名"
          %span.form-content__box__require 必須
          = f.text_field :building, autocomplete: "new-password", placeholder: "例）柳ビル103"
        .form-content__box
          = f.label "電話"
          %span.form-content__box__require 必須
          = f.text_field :phone_number, autocomplete: "new-password", placeholder: "例）09012345678"
        .form-content__submit
          = f.submit "次へ進む"
  = render "signup/footer"
